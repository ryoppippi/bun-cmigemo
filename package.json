{
	"name": "bun-cmigemo",
	"type": "module",
	"module": "index.ts",
	"scripts": {
		"lint": "eslint --cache .",
		"format": "nr lint --fix",
		"prepare": "nlx bunpare && nr dict && nr cmigemo:fetch && nr cmigemo:build",
		"dict": "nlx giget --forceClean gh:oguna/migemo-compact-dict-latest#master && nr bunsh dict:mv",
		"dict:mv": "mv oguna-migemo-compact-dict-latest dict",
		"cmigemo:fetch": "nlx giget --forceClean gh:koron/cmigemo#master",
		"cmigemo:build": "bun run ./scripts/build-cmigemo.ts",
		"bunsh": "bun run --shell bun"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"devDependencies": {
		"@antfu/ni": "^0.23.0",
		"@ryoppippi/eslint-config": "npm:@jsr/ryoppippi__eslint-config",
		"@types/bun": "latest",
		"consola": "^3.2.3",
		"eslint": "^9.11.1",
		"eslint-plugin-format": "^0.1.2"
	},
	"dependencies": {
		"uint8array-extras": "^1.4.0"
	}
}
